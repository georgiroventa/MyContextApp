<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.georgi.myapplication.ParentActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:padding="@dimen/default_padding"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="21dp">

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="cursive"
            android:text="@string/app_name"
            android:textAlignment="center"
            android:textColor="@color/colorText"
            android:textSize="@dimen/app_name_size" />

        <Button
            android:id="@+id/button_map"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorBackground"
            android:text="Map"
            android:textAllCaps="false"
            android:textColor="@color/colorText" />

        <Button
            android:id="@+id/button_children"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button_map"
            android:background="@color/colorBackground"
            android:text="My context data"
            android:textAllCaps="false"
            android:textColor="@color/colorText" />

        <Button
            android:id="@+id/button_history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button_children"
            android:background="@color/colorBackground"
            android:text="History"
            android:textAllCaps="false"
            android:textColor="@color/colorText" />

        <Button
            android:id="@+id/button_awareness"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button_notifications"
            android:background="@color/colorBackground"
            android:text="Awareness"
            android:textAllCaps="false"
            android:textColor="@color/colorText" />

        <Button
            android:id="@+id/button_request"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button_awareness"
            android:background="@color/colorBackground"
            android:text="Coordinates request"
            android:textAllCaps="false"
            android:textColor="@color/colorText" />

        <Button
            android:id="@+id/button_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button_request"
            android:background="@color/colorBackground"
            android:text="Settings"
            android:textAllCaps="false"
            android:textColor="@color/colorText" />

        <Button
            android:id="@+id/button_noise"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button_settings"
            android:background="@color/colorBackground"
            android:text="Noise level"
            android:textAllCaps="false"
            android:textColor="@color/colorText" />
        <Button
            android:id="@+id/logoutButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|bottom"
            android:text="@string/logout_button_label" />

    </LinearLayout>


</android.support.constraint.ConstraintLayout>
