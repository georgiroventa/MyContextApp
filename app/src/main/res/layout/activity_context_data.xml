<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ContextDataActivity">

    <TextView
        android:id="@+id/Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="cursive"
        android:gravity="center"
        android:text="My context data"
        android:textAlignment="center"
        android:textSize="45sp" />


    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Title"
        android:gravity="center"
        android:text="View my context data"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/date_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="39dp"
        android:text="Date and current time: "
        android:textStyle="italic"
        android:layout_below="@id/button"
        android:layout_marginTop="20dp"/>


    <TextView
        android:id="@+id/activity_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="39dp"
        android:text="User's activity: "
        android:textStyle="italic"
        android:layout_below="@id/date_time_tv"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/time_sec_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="39dp"
        android:text="Time in seconds: "
        android:textStyle="italic"
        android:layout_below="@id/activity_tv"
        android:layout_marginTop="20dp"/>

    <TextView
    android:id="@+id/headphone_tv"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="39dp"
    android:text="Headphone status: "
    android:textStyle="italic"
    android:layout_below="@id/time_sec_tv"
    android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/location_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="39dp"
        android:text="Current location: "
        android:textStyle="italic"
        android:layout_below="@id/headphone_tv"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/weather_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="39dp"
        android:text="Current weather: "
        android:textStyle="italic"
        android:layout_below="@id/location_tv"
        android:layout_marginTop="20dp"/>



</RelativeLayout>