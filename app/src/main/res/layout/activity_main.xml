        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="cursive"
            android:text="@string/app_name"
            android:textAlignment="center"
            android:textColor="@color/colorText"
            android:textSize="@dimen/app_name_size" />

        <Button
            android:id="@+id/button_map"
            android:layout_width="265dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:background="@color/colorBackground"
            android:layout_below="@+id/title"
            android:layout_marginTop="50dp"
            android:text="Map"
            android:textAllCaps="false"
            android:textColor="@color/colorText" />

        <Button
            android:id="@+id/button_children"
            android:layout_width="265dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button_map"
            android:layout_alignParentStart="true"
            android:layout_marginStart="50dp"
            android:layout_marginTop="25dp"
            android:background="@color/colorBackground"
            android:text="My context data"
            android:textAllCaps="false"
            android:textColor="@color/colorText" />

    <Button
        android:id="@+id/button_history"
        android:layout_width="265dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_children"
        android:layout_alignParentStart="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="25dp"
        android:background="@color/colorBackground"
        android:text="Location history"
        android:textAllCaps="false"
        android:textColor="@color/colorText" />


    <Button
        android:id="@+id/button_request"
        android:layout_width="265dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_history"
        android:layout_alignParentStart="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="25dp"
        android:background="@color/colorBackground"
        android:text="Coordinates request"
        android:textAllCaps="false"
        android:textColor="@color/colorText" />


    <Button
        android:id="@+id/button_noise"
        android:layout_width="265dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_request"
        android:layout_alignParentStart="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="25dp"
        android:background="@color/colorBackground"
        android:text="Noise level"
        android:textAllCaps="false"
        android:textColor="@color/colorText" />

    <Button
        android:id="@+id/button_settings"
        android:layout_width="265dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_noise"
        android:layout_alignParentStart="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="25dp"
        android:background="@color/colorBackground"
        android:text="Settings"
        android:textAllCaps="false"
        android:textColor="@color/colorText" />

    <Button
        android:id="@+id/logoutButton"
        android:layout_width="215dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_settings"
        android:layout_alignParentStart="true"
        android:background="#d64848"
        android:layout_marginStart="75dp"
        android:layout_marginTop="50dp"
        android:textColor="@color/colorWhite"
        android:text="@string/logout_button_label"
        android:textStyle="bold" />



</RelativeLayout>
