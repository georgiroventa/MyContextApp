<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".KmeansActivity">

    <TextView
        android:id="@+id/Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="cursive"
        android:gravity="center"
        android:text="User location history"
        android:textAlignment="center"
        android:textColor="#5a5893"
        android:textSize="45sp" />


    <TextView
        android:id="@+id/context1"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:text=""
        android:textSize="16dp"
        android:textStyle="italic"
        android:background="@drawable/rounded_corner"
        android:textColor="#5a5893"
        android:fontFamily="sans-serif"
        android:layout_below="@id/Title"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/context2"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:fontFamily="sans-serif"
        android:textColor="#5a5893"
        android:text=""
        android:textSize="16sp"
        android:textStyle="italic"
        android:background="@drawable/rounded_corner"
        android:layout_below="@id/context1"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/button_map"
        android:layout_width="200dp"
        android:layout_height="10dp"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/context2"
        android:layout_centerHorizontal="true"
        android:background="@color/colorBackground"
        android:textColor="@color/colorText"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="80dp"
        android:text="View my locations on map" />




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/bottomBar"
        android:layout_alignParentBottom="true">

        <android.support.design.widget.BottomNavigationView
            app:labelVisibilityMode="labeled"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/bottomNavView_Bar"
            android:background="@drawable/white_border_bottom"
            app:menu="@menu/bottom_menu">


        </android.support.design.widget.BottomNavigationView>
    </RelativeLayout>


</RelativeLayout>